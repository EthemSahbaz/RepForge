@page "/register"
@layout EmptyLayout
@inject NavigationManager Navigation


<MudContainer Class="mx-4 my-4">
    <MudTextField Placeholder="Username" Class="my-8" @bind-Value="TextValue" Label="Please enter your username" Variant="Variant.Text"></MudTextField>
    <MudButton Variant="Variant.Filled" FullWidth="true" Color="Color.Info" @onclick="NavigateTest">Register</MudButton>
</MudContainer>

@code {
    public string? TextValue { get; set; }

    private void NavigateTest()
    {
        Navigation.NavigateTo("/");
    }
}
