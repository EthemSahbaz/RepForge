@page "/"
@using RepForge.Application.Workouts
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudContainer Class="d-flex align-center pl-0">
                <MudIcon Icon="@Icons.Material.Filled.SafetyCheck"/>
                <MudText Typo="Typo.h5">Workouts</MudText>
            </MudContainer>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

<MudContainer Class="my-8">
    @foreach (var workout in Workouts)
    {
        <MudCard Class="my-4" Outlined="true">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@workout.Name</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This is a description</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">See details</MudButton>
            </MudCardActions>
        </MudCard>
    }
</MudContainer>

@code{
    public List<WorkoutResponse> Workouts { get; set; } = new()
    {
        new WorkoutResponse(Guid.Empty, Guid.Empty,"Full Body"),
        new WorkoutResponse(Guid.Empty, Guid.Empty,"Upper Body"),
        new WorkoutResponse(Guid.Empty, Guid.Empty,"Lower Body"),
    };



}